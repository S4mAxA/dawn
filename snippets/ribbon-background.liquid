{% comment %}
  Snippet pour ajouter un fond ruban animé style écran de veille Windows
  Ce snippet doit être inclus dans le layout principal (theme.liquid)
{% endcomment %}

{% if settings.enable_ribbon %}
  <div class="ribbon-background" id="ribbonBackground" 
       data-opacity="{{ settings.ribbon_opacity | default: 0.03 }}"
       data-blur="{{ settings.ribbon_blur | default: 40 }}"
       data-mouse-follow="{{ settings.ribbon_mouse_follow | default: true }}"
       data-scroll-parallax="{{ settings.ribbon_scroll_parallax | default: true }}">
    <div class="ribbon"></div>
    <div class="ribbon-secondary"></div>
    <div class="ribbon-tertiary"></div>
  </div>

  {{ 'ribbon-background.js' | asset_url | script_tag }}
{% endif %}
